<?xml version="1.0" encoding="utf-8"?>
<com.example.ruofan.iconclickdemo.BubbleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aimi="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bubble"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_base_bg_bubble">

        <ImageView
            android:id="@+id/image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1px"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:src="@drawable/icon_share_qq_zone"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:maxLines="1"
            android:maxWidth="300dp"
            android:paddingRight="6dp"
            android:text="北京市的xxxx"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/bubble_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/app_base_arrow_right_white" />
    </LinearLayout>
</com.example.ruofan.iconclickdemo.BubbleView>