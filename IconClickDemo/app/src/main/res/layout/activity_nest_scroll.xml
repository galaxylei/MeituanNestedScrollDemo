<?xml version="1.0" encoding="utf-8"?>
<com.example.ruofan.iconclickdemo.MyNestedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_share_qq" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#654321"
        android:gravity="center"
        android:text="Custom NestedScrolling View"
        android:textSize="20sp" />

    <com.example.ruofan.iconclickdemo.MyNestedChildLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/large_text" />

    </com.example.ruofan.iconclickdemo.MyNestedChildLinearLayout>com.example.ruofan.iconclickdemo.MyNestedChildLinearLayout>

</com.example.ruofan.iconclickdemo.MyNestedLinearLayout>

